{
    "name": "torounit/composer-wp",
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "wp-cli/wp-cli" : "~0.21",
        "johnpbloch/wordpress": "4.4.1",
        "wpackagist-theme/habakiri": "*",
        "wpackagist-plugin/jetpack": "*",
        "wpackagist-plugin/hello-kushimoto": "*",
        "wpackagist-plugin/simple-post-type-permalinks": "*"
    },

    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Hiroshi Urabe",
            "email": "mail@torounit.com"
        }
    ],
    "config": {
        "vendor-dir": "www/wp-content/mu-plugins/vendor"
    },
    "extra": {
        "wordpress-install-dir": "www/wp",
        "installer-paths": {
            "www/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "www/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "pre-install-cmd": [
            "echo '<?php ' > www/salt.php",
            "curl https://api.wordpress.org/secret-key/1.1/salt/ >> www/salt.php"
        ],
        "server": [
          "bash ./bin/provision.sh"
        ]
    }
}
