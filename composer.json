{
    "name": "torounit/composer-wp",
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4.2",
        "wp-cli/wp-cli" : "~0.21",
        "psy/psysh" : "~0.6",
        "johnpbloch/wordpress": "4.4",
        "wpackagist-plugin/hello-kushimoto": "*",
        "wpackagist-plugin/simple-post-type-permalinks": "*"
    },

    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Hiroshi Urabe",
            "email": "mail@torounit.com"
        }
    ],
    "extra": {
        "wordpress-install-dir": "www",
        "installer-paths": {
            "www/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "www/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "config": {
        "vendor-dir": "www/vendor"
    },
    "scripts": {
        "pre-package-install": [
            "echo '<?php ' > salt.php",
            "curl https://api.wordpress.org/secret-key/1.1/salt/ >> salt.php"
        ]
    }
}
