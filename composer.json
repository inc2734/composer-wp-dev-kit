{
    "name": "torounit/composer-wp-dev-kit",
    "support": {
        "issues": "https://github.com/torounit/composer-wp-dev-kit/issues",
        "source": "https://github.com/torounit/composer-wp-dev-kit"
    },
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Hiroshi Urabe",
            "email": "mail@torounit.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/humanmade/WordPress-Importer"
        }
    ],
    "require": {
        "php": ">=5.4.2",
        "wp-cli/wp-cli" : "~0.23",
        "johnpbloch/wordpress": "^4.5",
        "wpackagist-theme/twentysixteen": "*",
        "wpackagist-plugin/wp-api": "*",
        "wpackagist-plugin/built-in-server-helper": "*",
        "automattic/jetpack": "^4.0",
        "torounit/hello-kushimoto": "^2.9",
        "humanmade/wordpress-importer": "dev-master"

    },
    "config": {
        "vendor-dir": "wp-content/mu-plugins/vendor",
        "secure-http": false
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "scripts": {
        "start": "./bin/provision.sh",
        "create-production-config": "cp config-sample.php config.php",
        "import-theme-unit-test": [

            "wp plugin activate wordpress-importer",
            "curl https://raw.githubusercontent.com/jawordpressorg/theme-test-data-ja/master/wordpress-theme-test-date-ja.xml > theme-unit-test-data.xml",
            "wp wxr-importer import theme-unit-test-data.xml",
            "rm theme-unit-test-data.xml"
        ],
        "pre-install-cmd": [
            "cp local-config-sample.json local-config.json",
            "echo '<?php ' > salt.php",
            "curl https://api.wordpress.org/secret-key/1.1/salt/ >> salt.php"
        ]
    }
}
